{
  "version": 2,
  "builds": [
    {
      "src": "frontend/src/index.js",
      "use": "@vercel/static"
    },
    {
      "src": "backend/server.js",  // Updated path
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/src/$1"
    }
  ]
}